<div class="form-group">
    <?php echo Form::label($parameters['name'],$parameters['label']); ?>



    <?php if(isset($parameters['value'])&&($parameters['value']!='')): ?>
        <?php echo Form::textarea($parameters['name'],$parameters['value'],['class'=> 'form-control']); ?>

    <?php else: ?>
        <?php echo Form::textarea($parameters['name'],null,['class'=> 'form-control']); ?>

    <?php endif; ?>
</div>
